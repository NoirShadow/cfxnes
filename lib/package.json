{
  "name": "cfxnes",
  "version": "0.6.0",
  "description": "Library for NES emulation",
  "license": "MIT",
  "private": true,
  "keywords": [
    "emulator",
    "nes"
  ],
  "author": "Jan Pikl <pikl.jan@gmail.com>",
  "homepage": "https://github.com/jpikl/cfxnes",
  "bugs": {
    "url": "https://github.com/jpikl/cfxnes/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jpikl/cfxnes"
  },
  "files": [
    "dist/",
    "API.md"
  ],
  "main": "dist/cfxnes.js",
  "scripts": {
    "dev": "npm run watch:debug",
    "build": "java -jar node_modules/google-closure-compiler/compiler.jar --compilation_level=ADVANCED --language_in=ECMASCRIPT6_STRICT --language_out=ECMASCRIPT5_STRICT --rewrite_polyfills=false --output_wrapper_file=umd.template --assume_function_wrapper --formatting=SINGLE_QUOTES --externs=externs.js --jscomp_off=checkTypes --js='src/**.js' --js='../core/src/**.js' --js_output_file=dist/cfxnes.js",
    "build:debug": "java -jar node_modules/google-closure-compiler/compiler.jar --compilation_level=SIMPLE --language_in=ECMASCRIPT6_STRICT --language_out=ECMASCRIPT5_STRICT --rewrite_polyfills=false --output_wrapper_file=umd.template --assume_function_wrapper --formatting=SINGLE_QUOTES --formatting=PRETTY_PRINT --formatting=PRINT_INPUT_DELIMITER --externs=externs.js --jscomp_off=checkTypes --js='src/**.js' --js='../core/src/**.js' --js_output_file=dist/cfxnes.debug.js",
    "watch": "watch 'npm run build' src ../core/src",
    "watch:debug": "watch 'npm run build:debug' src ../core/src",
    "lint": "eslint src test || true",
    "test:src": "karma start --browsers=Chromium --target=src --no-polyfills || true",
    "test:lib": "karma start --browsers=Chromium --target=lib --no-polyfills || true",
    "test:lib:debug": "karma start --browsers=Chromium --target=debug-lib --no-polyfills || true",
    "test": "karma start --browsers=Chromium,Firefox,Opera --no-polyfills || true",
    "test:win": "karma start --browsers=IE,Edge --win-webdriver-host=10.0.0.4 || true",
    "test:osx": "karma start --browsers=Safari --osx-webdriver-host=10.0.0.3 || true",
    "clean": "rm -rf dist",
    "pretest:lib": "npm run build",
    "pretest:lib:debug": "npm run build:debug",
    "pretest": "npm run build",
    "pretest:win": "npm run build",
    "pretest:osx": "npm run build"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "core-js": "^2.4.1",
    "eslint": "^3.13.1",
    "eslint-plugin-import": "^2.2.0",
    "google-closure-compiler": "^20161201.0.0",
    "ip": "^1.1.3",
    "jszip": "^3.1.2",
    "karma": "^1.4.0",
    "karma-browserify": "^5.1.0",
    "karma-chai-plugins": "^0.8.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-opera-launcher": "^1.0.0",
    "karma-webdriver-launcher": "^1.0.4",
    "mocha": "^3.0.2",
    "watch": "^1.0.1"
  }
}
