{
  "name": "cfxnes-lib",
  "version": "0.5.0",
  "description": "cfxnes library",
  "license": "MIT",
  "private": true,
  "keywords": [
    "emulator",
    "nes"
  ],
  "author": "Jan Pikl <pikl.jan@gmail.com>",
  "homepage": "https://github.com/jpikl/cfxnes",
  "bugs": {
    "url": "https://github.com/jpikl/cfxnes/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jpikl/cfxnes"
  },
  "scripts": {
    "dev": "npm run watch:debug",
    "build": "java -jar node_modules/google-closure-compiler/compiler.jar --compilation_level=ADVANCED --language_in=ECMASCRIPT6_STRICT --language_out=ECMASCRIPT5_STRICT --output_wrapper='(function(){%output%}.call(this));' --assume_function_wrapper --formatting=SINGLE_QUOTES --externs=externs/JSZip.js --externs=externs/w3c_gamepad.js --js='src/**.js' --js='../core/src/**.js' --js_output_file=dist/cfxnes.js",
    "build:debug": "java -jar node_modules/google-closure-compiler/compiler.jar --compilation_level=SIMPLE --language_in=ECMASCRIPT6_STRICT --language_out=ECMASCRIPT5_STRICT --output_wrapper='(function(){%output%}.call(this));' --assume_function_wrapper --formatting=SINGLE_QUOTES --formatting=PRETTY_PRINT --formatting=PRINT_INPUT_DELIMITER --externs=externs/JSZip.js --externs=externs/w3c_gamepad.js --js='src/**.js' --js='../core/src/**.js' --js_output_file=dist/cfxnes.debug.js",
    "watch": "watch 'npm run build' src ../core/src",
    "watch:debug": "watch 'npm run build:debug' src ../core/src",
    "lint": "eslint src test || true",
    "test:src": "karma start --browsers=Chrome --target=src --no-polyfills || true",
    "test:lib": "karma start --browsers=Chrome --target=lib --no-polyfills || true",
    "test:lib:debug": "karma start --browsers=Chrome --target=debug-lib --no-polyfills || true",
    "test": "karma start --browsers=Chrome,Firefox,Opera --no-polyfills || true",
    "test:win": "karma start --browsers=IE,Edge --win-webdriver-host=10.0.0.4 || true",
    "test:osx": "karma start --browsers=Safari --osx-webdriver-host=10.0.0.3 || true",
    "clean": "rm -rf dist",
    "pretest:lib": "npm run build",
    "pretest:lib:debug": "npm run build:debug",
    "pretest": "npm run build",
    "pretest:win": "npm run build",
    "pretest:osx": "npm run build",
    "postbuild": "mkdir -p ../app/dist/static && cp dist/cfxnes.js ../app/dist/static/cfxnes.js",
    "postbuild:debug": "mkdir -p ../app/dist/static && cp dist/cfxnes.debug.js ../app/dist/static/cfxnes.js"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "core-js": "^2.4.1",
    "eslint": "^3.5.0",
    "eslint-plugin-import": "^1.15.0",
    "google-closure-compiler": "^20160911.0.0",
    "ip": "^1.1.3",
    "jszip": "^3.1.2",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-opera-launcher": "^1.0.0",
    "karma-webdriver-launcher": "^1.0.4",
    "mocha": "^3.0.2",
    "watch": "^0.19.2"
  }
}
